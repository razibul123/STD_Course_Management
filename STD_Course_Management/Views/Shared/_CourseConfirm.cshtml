@model List<STD_Course_Management.Models.Course>
@if (Model.Count > 0)
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    Course Code
                </th>
                <th>
                    Course Name
                </th>
                <th>
                    Credit
                </th>
                <th>
                    Department
                </th>
                <th>
                    Semester
                </th>
                <th>
                    Teacher
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => @item.Course_code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Credit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dept.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Semester.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Teacher.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2> No Course has been selected</h2>
}