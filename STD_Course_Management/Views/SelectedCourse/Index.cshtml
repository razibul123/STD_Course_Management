@model STD_Course_Management.ViewModels.CourseConfirmVM
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form method="get">
    <br /><br />
    <h2 class="text-info">Course List</h2>
    <br />
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.CourseConfirms.FirstOrDefault().Std.User_id)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.CourseConfirms.FirstOrDefault().Std.UserName)
            </th>

        </tr>
        @foreach (var item in Model.CourseConfirms)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Std_Id)
                </td>

                <td>
                    @Html.DisplayFor(m => item.Std.UserName)
                </td>
                <td>
                    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a type="button" class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">
                        <i class="far fa-list-alt"></i>
                    </a>

                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>

        }
    </table>
</form>