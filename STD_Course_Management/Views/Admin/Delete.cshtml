@model STD_Course_Management.Data.ApplicationUser
    @{
        ViewData["Title"] = "Delete";
    }

    <h1>Delete</h1>


    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div class="form-group">
                    <label asp-for="User_id" class="control-label"></label>
                    <input asp-for="User_id" readonly class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" readonly class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Gender">  </label>
                    <select asp-for="Gender" readonly class="form-control">
                        <option value="">-------------</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Date_Birth"></label>
                    <input type="date" readonly asp-for="Date_Birth" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" readonly class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Blood_group"></label>
                    <select asp-for="Blood_group" readonly class="form-control">
                        <option value="">----------</option>
                        <option value="A (+ve)">A (+ve)</option>
                        <option value="A (-ve)">A (-ve)</option>
                        <option value="A (+ve)">B (+ve)</option>
                        <option value="B (-ve)">B (-ve)</option>
                        <option value="O (+ve)">O (+ve)</option>
                        <option value="O (-ve)">O (-ve)</option>
                        <option value="AB (+ve)">AB (+ve)</option>
                        <option value="AB (-ve)">AB (-ve)</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="User_image" class="control-label"></label>
                    <input asp-for="User_image" readonly type="file" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" asp-route-id="@Model.Id" value="Delete" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>

    @section Scripts{
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

